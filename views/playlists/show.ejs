<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= playlist.title %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
    <h1><%= playlist.name %></h1>
    <p><%= playlist.description %></p>
    <% playlist.tracks.forEach(track => { %>
     <p><%= track.trackName %></p>
     <form action="/tracks/<%= track._id %>/remove/<%= playlist._id %>?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit">Remove Track</button>
    </form>
    <% }) %>
    <form action="/tracks/add/<%= playlist._id %>?_method=PUT" method="POST">
        <select name="trackId" id="tracks">
        <% tracks.forEach(showTracks => { %>
            <option value="<%=showTracks._id  %>">Artist Name: <%= showTracks.artistName %> Track Name: <%= showTracks.trackName %></option>
        <% }) %>
        </select>
        <button type="submit">Add Tracks</button>   
    </form>
</body>
</html>

